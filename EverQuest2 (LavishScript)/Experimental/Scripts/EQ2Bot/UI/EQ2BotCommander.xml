<?xml version="1.0" encoding="UTF-8" ?>
<ISUI>
	<template name='My.window.TitleBar'>
    		<Border>1</Border>
		<x>3</x>
    		<BorderColor>FF000033</BorderColor>
    		<Width>r6</Width>
		<Height>26</Height>
		<Texture Template='EQ2.window.TitleBar.Texture' />
		<Children>
			<Text Name='Title' template='EQ2.window.TitleBar.title' />
			<Button Name='Minimize' template='EQ2.window.TitleBar.Minimize'>
			</Button>
			<Button Name='Maximize' template='EQ2.window.TitleBar.Maximize'>
			</Button>
			<commandbutton name='Custom Close Button' Template='EQ2.Window.TitleBar.Close'>
				<Command>Script[EQ2BotCommander]:End</Command>
			</commandbutton>
		</Children>
	</template>
	<template name='My.window'>
		<Border>1</Border>
		<Resizable>1</Resizable>
		<CloseButton />
		<MinimizeButton />
		<TitleBar template='My.window.TitleBar' />
		<OffsetTitleBarHeight />
		<Client template='EQ2.window.Client' />
		<StorePosition>1</StorePosition>
	</template>
	<Window name='EQ2Bot Commander' Template='My.Window'>
		<X>10</X>
		<Y>10</Y>
		<Width>60</Width>
		<Height>400</Height>
		<StorePosition>1</StorePosition>
		<Title>EQ2Bot Commander</Title>
		<OnLoad>
		</OnLoad>
		<OnUnload>
		</OnUnload>
		<OnLeftClick>
			This:SetFocus
		</OnLeftClick>
		<Children>
			<CommandButton Name='Follow' Template='EQ2.Button'>
				<X>5%</X>
				<Y>20</Y>
				<Width>40</Width>
				<Height>30</Height>
				<Text>Follow</Text>
				<AutoTooltip>Tell all bots to follow</AutoTooltip>
				<Command>Relay all Script[EQ2Bot]:ExecuteAtom[AutoFollowTank]</Command>
			</CommandButton>
			<CommandButton Name='Stop' Template='EQ2.Button'>
				<X>5%</X>
				<Y>60</Y>
				<Width>40</Width>
				<Height>30</Height>
				<Text>Stop</Text>
				<AutoTooltip>Tell all bots to stop</AutoTooltip>
				<Command>Relay all Script[EQ2Bot]:ExecuteAtom[StopAutoFollowing]</Command>
			</CommandButton>
			<CommandButton Name='RunEQ2Bot' Template='EQ2.Button'>
				<X>5%</X>
				<Y>100</Y>
				<Width>40</Width>
				<Height>30</Height>
				<Text>Run</Text>
				<AutoTooltip>Run EQ2Bot.iss on all computers</AutoTooltip>
				<Command>Relay all RunScript EQ2Bot</Command>
			</CommandButton>
			<CommandButton Name='StartEQ2Bot' Template='EQ2.Button'>
				<X>5%</X>
				<Y>140</Y>
				<Width>40</Width>
				<Height>30</Height>
				<Text>Start</Text>
				<AutoTooltip>Start EQ2Bot on all computers</AutoTooltip>
				<Command>Relay all Script[EQ2Bot]:ExecuteAtom[StartEQ2Bot]</Command>
			</CommandButton>
			<CommandButton Name='CloseEQ2Bot' Template='EQ2.Button'>
				<X>5%</X>
				<Y>180</Y>
				<Width>40</Width>
				<Height>30</Height>
				<Text>Close</Text>
				<AutoTooltip>Close EQ2bot.iss on all computers</AutoTooltip>
				<Command>Relay all Script[EQ2Bot]:End</Command>
			</CommandButton>
		</Children>
	</Window>
</ISUI>