<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<Window Name='gearstart'>
		<X>30%</X>
		<Y>30%</Y>
		<Width>180</Width>
		<Height>120</Height>
		<StorePosition>0</StorePosition>
		<Title>Gear Strip</Title>
	  <TitleBar template='window.Titlebar'>
		<Children>
		  <Text Name='Title' Template='window.Titlebar.Title' />
		  <Button Name='Minimize' Template='window.Titlebar.Minimize' />
		  <Button Name='Maximize' Template='window.Titlebar.Maximize' />
		  <commandbutton name='Custom Close Button' Template='window.Titlebar.Close'>
			<Command>Script[gear]:End</Command>
		  </commandbutton>
		</Children>
	  </TitleBar>
	  <Children>
			<Text name='Text1'> 
				<X>10</X> 
				<Y>10</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>Please choose your</Text> 
			</Text>
			<Text name='Text2'> 
				<X>10</X> 
				<Y>25</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>current gear.</Text> 
			</Text>

			<Combobox Name='gearlist'>
				<X>10</X> 
				<Y>50</Y> 
				<Width>90%</Width> 
				<Height>20</Height> 
				<FullHeight>250%</FullHeight>
				<ButtonWidth>20</ButtonWidth>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
			</Combobox>
			<Commandbutton name='startupok'> 
				<X>70</X> 
				<Y>75</Y> 
				<Width>40</Width> 
				<Height>20</Height>
				<Text>Ok</Text>
				<OnLeftClick>
					Script[gear]:QueueCommand[call startup]
				</OnLeftClick>
			</Commandbutton> 
		</Children>
	</Window>

</ISUI>