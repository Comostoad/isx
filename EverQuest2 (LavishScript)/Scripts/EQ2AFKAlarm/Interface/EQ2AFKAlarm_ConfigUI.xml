							<Command>noop ${Script[EQ2AFKAlarm].Variable[Logging]:Set[TRUE]}</Command>
							<CommandChecked>noop ${Script[EQ2AFKAlarm].Variable[Logging]:Set[FALSE]}</CommandChecked>
							<Data>${Script[EQ2AFKAlarm].Variable[Logging]}</Data>
						</commandcheckbox>

