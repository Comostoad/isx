<?xml version="1.0" encoding="UTF-8" ?>
<ISUI>
	<Commandcheckbox Name='Makepet' Template='EQ2.Commandcheckbox'>
		<Visible>1</Visible>
		<X>10</X>
		<Y>10</Y>
		<Width>30%</Width>
		<Height>20</Height>
		<Text>Use Personae</Text>
		<AutoTooltip>Toggles the summoning of personna</AutoTooltip>
		<OnLeftClick>
			if ${This.Checked}
			{

				Script[EQ2Bot].Variable[Makepet]:Set[TRUE]
				SettingXML[Scripts/EQ2Bot/Character Config/${Me.Name}.xml].Set[${Me.SubClass}]:Set["Makepet",TRUE]:Save
			}
			else
			{

				Script[EQ2Bot].Variable[Makepet]:Set[FALSE]
				SettingXML[Scripts/EQ2Bot/Character Config/${Me.Name}.xml].Set[${Me.SubClass}]:Set["Makepet",FALSE]:Save
			}
		</OnLeftClick>
		<Data>${SettingXML[Scripts/EQ2Bot/Character Config/${Me.Name}.xml].Set[${Me.SubClass}].GetString[Makepet]}</Data>
	</Commandcheckbox>
