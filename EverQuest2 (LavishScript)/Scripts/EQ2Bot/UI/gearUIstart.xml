<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<template name='My.window.TitleBar'>
    		<Border>1</Border>
		<x>3</x>
    		<BorderColor>FF000033</BorderColor>
    		<Width>r6</Width>
		<Height>17</Height>
		<Texture />
		<Children>
			<Text Name='Title' />
			<Button Name='Minimize'>
			</Button>
			<Button Name='Maximize'>
			</Button>
			<commandbutton name='Custom Close Button'>
				<Command>Script[gear]:End</Command>
			</commandbutton>
		</Children>
	</template>
		<template name='My.window'>
		<Border>1</Border>
		<Resizable>0</Resizable>
		<CloseButton />
		<MinimizeButton />
		<TitleBar template='My.window.TitleBar' />
		<OffsetTitleBarHeight />
		<Client />
		<StorePosition>1</StorePosition>
	</template>
	<Window Name='gearstart' Template='My.window'>
		<X>30%</X>
		<Y>30%</Y>
		<Width>180</Width>
		<Height>120</Height>
		<StorePosition>0</StorePosition>
		<Title>Gear Strip</Title>
		<Children>
			<Text name='Text1'> 
				<X>10</X> 
				<Y>10</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>Please choose your</Text> 
			</Text>
			<Text name='Text2'> 
				<X>10</X> 
				<Y>25</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>current gear.</Text> 
			</Text>

			<Combobox Name='gearlist'>
				<X>10</X> 
				<Y>50</Y> 
				<Width>90%</Width> 
				<Height>20</Height> 
				<FullHeight>250%</FullHeight>
				<ButtonWidth>20</ButtonWidth>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
			</Combobox>
			<Commandbutton name='startupok'> 
				<X>70</X> 
				<Y>75</Y> 
				<Width>40</Width> 
				<Height>20</Height>
				<Text>Ok</Text>
				<OnLeftClick>
					Script[gear]:QueueCommand[call startup]
				</OnLeftClick>
			</Commandbutton> 
		</Children>
	</Window>

</ISUI>