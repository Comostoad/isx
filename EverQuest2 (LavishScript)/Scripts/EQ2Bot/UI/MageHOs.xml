<ISUI>
	<Text Name='lblMageStar1'>
		<X>10</X>
		<Y>10</Y>
		<Width>145</Width>
		<Height>20</Height>
		<Alignment>Left</Alignment>
		<Text>Star 1</Text>
	</Text>
	<combobox name='cbMageStar1'>
		<x>150</x>
		<y>10</y>
		<width>240</width>
		<height>20</height>
		<OnLeftClick>
			declare Counter int
			Counter:Set[1]
			This:ClearItems
			do
			{
				if ${Me.Ability[${Counter}].HOIconID}==29
				{
					This:AddItem[${Me.Ability[${Counter}].Name}]
				}
			}
			while ${Counter:Inc}&lt;=${Me.NumAbilities}
		</OnLeftClick>
		<OnLoad>
			This:AddItem[${LavishSettings[EQ2Bot].FindSet[Character].FindSet[EQ2BotExtras].FindSet[HeroicOp].FindSetting[MageStar1]}]
			This.ItemByValue[${LavishSettings[EQ2Bot].FindSet[Character].FindSet[EQ2BotExtras].FindSet[HeroicOp].FindSetting[MageStar1]}]:Select
		</OnLoad>
		<OnSelect>
			Script[EQ2Bot].Variable[MageStar1]:Set[${This.SelectedItem.Text}]
			LavishSettings[EQ2Bot].FindSet[Character].FindSet[EQ2BotExtras].FindSet[HeroicOp]:AddSetting[MageStar1,${This.SelectedItem.Text}]
		</OnSelect>
	</combobox>
