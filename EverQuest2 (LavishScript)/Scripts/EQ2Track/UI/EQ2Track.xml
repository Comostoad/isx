<?xml version="1.0" encoding="UTF-8" ?>
<ISUI>
  <Window name='EQ2 Track'>
	<Border>0</Border>
	<X>10</X>
	<Y>10</Y>
	<Width>315</Width>
	<Height>190</Height>
	<Resizable MinHeight='190' MinWidth='315'>1</Resizable>
	<BorderColor>00000000</BorderColor>
	<StorePosition>1</StorePosition>
	<Title>${Me.Name} Track</Title>
	<OnLoad>
	</OnLoad>
	<OnUnload>
	</OnUnload>
	<OnLeftClick>
	  This:SetFocus
	</OnLeftClick>
	<Children>
	  <checkbox Name='TrackAggro'>
		<X>20</X>
		<Y>50</Y>
		<Width>100</Width>
		<Height>20</Height>
		<Text>Track aggro mobs only</Text>
		<OnLeftClick>
      TrackInterface:ChangeFilters
    </OnLeftClick>
	  </checkbox>
	  <Text Name='lblTrackList'>
		<X>20</X>
		<Y>10</Y>
		<Width>100</Width>
		<Height>20</Height>
		<Alignment>Left</Alignment>
		<Text>List:</Text>
	  </Text>
    <Button Name='SaveList'>
      <X>45</X>
      <Y>10</Y>
      <Width>50</Width>
      <Height>18</Height>
      <Text>Save</Text>
      <OnLeftClick>
      	TrackInterface:SaveList
      	This:SetFocus
     	</OnLeftClick>
    </Button>
    <Button Name='LoadList'>
      <X>100</X>
      <Y>10</Y>
      <Width>35</Width>
      <Height>18</Height>
      <Text>Load</Text>
      <OnLeftClick>
      	TrackInterface:LoadList
      	This:SetFocus
      </OnLeftClick>
    </Button>
    <Button Name='DelList'>
      <X>135</X>
      <Y>10</Y>
      <Width>40</Width>
      <Height>18</Height>
      <Text>Delete</Text>
      <OnLeftClick>
      	TrackInterface:DeleteList
      	This:SetFocus
      </OnLeftClick>
    </Button>
    <textentry name='TrackListName'>
		<X>20</X>
		<Y>30</Y>
		<Width>75</Width>
		<Height>15</Height>
    <OnKeyboardEnter>
    	This:SetText[]
    </OnKeyboardEnter>
	  </textentry>
    <Combobox name='TrackListCombo'>
      <X>100</X>
      <Y>27</Y>
      <Width>75</Width>
      <Height>20</Height>
      <Sort>Text</Sort>
      <AutoSort />
      <OnLoad>
        TrackInterface:UpdateListCombo
      </OnLoad>
    </Combobox>
	  <Text Name='lblLvlRangeFilter'>
		<X>20</X>
		<Y>70</Y>
		<Width>100</Width>
		<Height>20</Height>
		<Alignment>Left</Alignment>
		<Text>Level Range:</Text>
	  </Text>
	  <textentry name='TrackMinLevel'>
		<X>100</X>
		<Y>70</Y>
		<Width>25</Width>
		<Height>15</Height>
		<OnKeyUp>
      TrackInterface:ChangeFilters
    </OnKeyUp>
	  </textentry>
	  <Text Name='lblLvlRangeFilter2'>
		<X>130</X>
		<Y>70</Y>
		<Width>25%</Width>
		<Height>20</Height>
		<Alignment>Left</Alignment>
		<Text>-</Text>
	  </Text>
	  <textentry name='TrackMaxLevel'>
		<X>140</X>
		<Y>70</Y>
		<Width>25</Width>
		<Height>15</Height>
		<OnKeyUp>
      TrackInterface:ChangeFilters
    </OnKeyUp>
	  </textentry>
	  <Text Name='TrackSortLabel'>
		<X>20</X>
		<Y>90</Y>
		<Width>50</Width>
		<Height>20</Height>
		<Text>Sort by:</Text>
	  </Text>
	  <combobox name='TrackSort'>
		<X>70</X>
		<Y>90</Y>
		<Width>100</Width>
		<Height>20</Height>
		<FullHeight>120</FullHeight>
		<ButtonWidth>20</ButtonWidth>
		<Items>
		  <Item Value='1'>Distance</Item>
		  <Item Value='2'>Name</Item>
		  <Item Value='3'>Level</Item>
		  <Item Value='4'>Type</Item>
		  <Item Value='5'>None</Item>
		</Items>
		<OnSelect>
      TrackInterface:ChangeSort
    </OnSelect>
	  </combobox>
	  <Text Name='FiltersLabel'>
		<X>185</X>
		<Y>10</Y>
		<Width>50</Width>
		<Height>20</Height>
		<Text>Filter</Text>
	  </Text>
	  <textentry Name='FilterEditing'>
		<X>190</X>
		<Y>30</Y>
		<Width>r212</Width>
		<Height>15</Height>
    <OnKeyboardEnter>
    	This:SetText[]
    </OnKeyboardEnter>
    <OnKeyDown>
    	if ${Key.Equal["enter"]}
    	{
     		TrackInterface:AddFilter
     		This:SetText[]
     		UIElement[FilterAdd@EQ2 Track]:SetFocus
      }
    </OnKeyDown>
	  </textentry>
	  <Listbox Name='FiltersList'>
		<X>190</X>
		<Y>45</Y>
		<Width>r212</Width>
		<Height>60</Height>
		<Items>
		</Items>
		<OnSelect>
		  This.Parent.FindChild[FilterEditing]:SetText[${This.SelectedItem.Text}]
		</OnSelect>
	  </Listbox>
    <Button Name='FilterClear'>
      <X>r95</X>
      <Y>10</Y>
      <Width>25</Width>
      <Height>20</Height>
      <Text>Clr</Text>
      <OnLeftClick>
        TrackInterface:ClearFilters
        This:SetFocus
      </OnLeftClick>
    </Button>
	  <Button name='FilterAdd'>
		<X>r70</X>
		<Y>10</Y>
		<Width>25</Width>
		<Height>20</Height>
		<Text>Add</Text>
		<OnLeftClick>
			if ${UIElement[FilterEditing@EQ2 Track].Text.Length.Equal[0]}
			{
				if ${Target(exists)}
				{
					UIElement[FilterEditing@EQ2 Track]:SetText[${Target.Name}]
				}
			}
      TrackInterface:AddFilter
      This:SetFocus
      UIElement[FilterEditing@EQ2 Track]:SetText[]
		</OnLeftClick>
	  </Button>
	  <Button name='FilterDel'>
		<X>r45</X>
		<Y>10</Y>
		<Width>25</Width>
		<Height>20</Height>
		<Text>Del</Text>
		<OnLeftClick>		
      TrackInterface:DelFilter
      This:SetFocus
      UIElement[FilterEditing@EQ2 Track]:SetText[]
		</OnLeftClick>
	  </Button>
	  <listbox name='TrackItems'>
		<X>20</X>
		<Y>110</Y>
		<Width>r40</Width>
		<Height>r130</Height>
		<SelectMultiple>0</SelectMultiple>
		<Items>
		  <Item Value='1'>Tracking</Item>
		  <Item Value='2'>Please Wait</Item>
		</Items>
		<OnLeftClick>
		  Actor[${This.SelectedItem.Value}]:DoTarget:WaypointTo
		</OnLeftClick>
		<OnRightClick>
			This:ClearSelection
			eq2execute "/waypoint_cancel"
		</OnRightClick>
	  </listbox>

	</Children>
  </Window>
</ISUI>