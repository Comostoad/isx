<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<template name='My.window.TitleBar'>
    		<Border>1</Border>
		<x>3</x>
    		<BorderColor>FF000033</BorderColor>
    		<Width>r6</Width>
		<Height>17</Height>
		<Texture Template='EQ2.window.TitleBar.Texture' />
		<Children>
			<Text Name='Title' template='EQ2.window.TitleBar.title' />
			<Button Name='Minimize' template='EQ2.window.TitleBar.Minimize'>
			</Button>
			<Button Name='Maximize' template='EQ2.window.TitleBar.Maximize'>
			</Button>
			<commandbutton name='Custom Close Button' Template='EQ2.Window.TitleBar.Close'>
				<Command>Script[gear]:End</Command>
			</commandbutton>
		</Children>
	</template>
		<template name='My.window'>
		<Border>1</Border>
		<Resizable>0</Resizable>
		<CloseButton />
		<MinimizeButton />
		<TitleBar template='My.window.TitleBar' />
		<OffsetTitleBarHeight />
		<Client template='EQ2.window.Client' />
		<StorePosition>1</StorePosition>
	</template>
	<Window Name='gearmain' Template='My.window'>
		<X>30%</X>
		<Y>30%</Y>
		<Width>180</Width>
		<Height>220</Height>
		<StorePosition>0</StorePosition>
		<Title>Gear Strip</Title>
		<Children>
			<Text name='Text1'> 
				<X>10</X> 
				<Y>10</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>Please have your</Text> 
			</Text>
			<Text name='Text2'> 
				<X>10</X> 
				<Y>25</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>proper gear equiped</Text> 
			</Text>
			<Text name='Text3'> 
				<X>10</X> 
				<Y>40</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>when creating</Text> 
			</Text>
			<Text name='Text4'> 
				<X>10</X> 
				<Y>55</Y> 
				<Width>150</Width> 
				<Height>20</Height>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
				<Text>your list.</Text> 
			</Text>
			<Combobox Name='Gear List' Template='EQ2.combobox'>
				<X>10</X> 
				<Y>80</Y> 
				<Width>90%</Width> 
				<Height>10%</Height> 
				<FullHeight>250%</FullHeight>
				<ButtonWidth>20</ButtonWidth>
				<Font>
					<Name>terminal</Name>
					<Size>12</Size>
					<Color>FFFFFFFF</Color>
				</Font>
			</Combobox>
			<Commandbutton name='equip' Template='EQ2.button'> 
				<X>10</X> 
				<Y>105</Y> 
				<Width>160</Width> 
				<Height>20</Height>
				<Text>Unequip Gear</Text>
				<OnLeftClick>
					Script[gear]:QueueCommand[call gearchange]
				</OnLeftClick>
			</Commandbutton> 
			<Commandbutton name='Create' Template='EQ2.button'> 
				<X>10</X> 
				<Y>130</Y> 
				<Width>160</Width> 
				<Height>20</Height>
				<Text>Create Gear Set</Text>
				<OnLeftClick>
					Script[gear]:QueueCommand[call createlist]
				</OnLeftClick>
			</Commandbutton> 
			<Commandbutton name='Update' Template='EQ2.button'> 
				<X>10</X> 
				<Y>155</Y> 
				<Width>160</Width> 
				<Height>20</Height>
				<Text>Update Gear Set</Text>
				<OnLeftClick>
					Script[gear]:QueueCommand[call updategear]
				</OnLeftClick>
			</Commandbutton> 
			<Commandbutton name='destroy' Template='EQ2.button'> 
				<X>10</X> 
				<Y>180</Y> 
				<Width>160</Width> 
				<Height>20</Height>
				<Text>Destroy Gear Set</Text>
				<OnLeftClick>
					Script[gear]:QueueCommand[call listdestroy]
				</OnLeftClick>
			</Commandbutton> 
		</Children>
	</Window>

</ISUI>