<Window x:Class="wpf_sample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WPF Sample" Height="175" Width="200">
  <StackPanel>
    <Border Margin="3" BorderBrush="Black" BorderThickness="2">
      <TextBlock Name="tbOutput" Margin="3">Output</TextBlock>
    </Border>
    <Button Name="btn1" Margin="3" Click="btn1_click">Click me...</Button>
    <Button Name="btn2" Margin="3" Click="btn2_click">and me...</Button>
    <Button Name="btn3" Margin="3" Click="btn3_click">one more time...</Button>
    <Button Name="btn4" Margin="3" Click="btn4_click">Now click me...</Button>
  </StackPanel>
</Window>
