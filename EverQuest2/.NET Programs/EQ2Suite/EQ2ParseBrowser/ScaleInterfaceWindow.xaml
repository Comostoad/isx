<eq2suitelib:CustomBaseWindow
	x:Class="EQ2ParseBrowser.ScaleInterfaceWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:eq2suitelib="clr-namespace:EQ2SuiteLib;assembly=EQ2SuiteLib"
	Title="Scale Interface" Height="118" Width="300" SizeToContent="WidthAndHeight" ResizeMode="NoResize" ShowInTaskbar="False">
	<StackPanel HorizontalAlignment="Stretch">
		<Label>Select the scale for the user interface</Label>
		<Slider Height="22" Name="m_wndScaleSlider" Minimum="0.5" Maximum="5" TickPlacement="BottomRight" TickFrequency="0.5" ValueChanged="m_wndScaleSlider_ValueChanged" IsMoveToPointEnabled="True" />
	</StackPanel>
</eq2suitelib:CustomBaseWindow>
